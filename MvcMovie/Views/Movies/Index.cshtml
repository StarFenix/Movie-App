@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <b> <a asp-action="Create" class="text-success">+ Create New</a></b>
</p>
<form asp-controller="Movies" asp-action="Index" method="get">
    <div class="row">
        <div class="col-sm-3">
            <label>Genre</label>
            <select asp-for="MovieGenre" class="form-control" asp-items="Model.Genres">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-sm-5">
            <label>Title</label>
            <input type="text" class="form-control" asp-for="SearchString" />
        </div>
        <div class="col-sm-4">
            <label>-</label><br />
            <button value="Filter" class="btn btn-info">Filter</button>
        </div>
    </div>
</form> <br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td><b>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="text-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Delete</a>
                </b></td>
            </tr>
        }
    </tbody>
</table>